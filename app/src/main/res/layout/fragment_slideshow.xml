<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    tools:context=".ui.slideshow.SlideshowFragment">

    <!-- Quote Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quoteCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNextLife"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_slideshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ðŸŒŸ Life quote will appear here ðŸŒŸ"
                android:textColor="#D81B60"
                android:textSize="22sp"
                android:fontFamily="serif"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€” Author"
                android:textColor="#555555"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNextLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ¨ Next Quote"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8E24AA"
        android:fontFamily="sans-serif-condensed"
        android:padding="14dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/quoteCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
